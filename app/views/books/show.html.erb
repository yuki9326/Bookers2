<div class="container">
    <div class="row">
        <div class="col-md-3">
            <%= render 'books/list', book: @book_new, user: @user %>
        </div>
        <div class="col-md-8 offset-md-1">
            <% if flash[:notice] %>
            <p><%= flash[:notice] %></p>
            <% end %>
            <h2>Book detail</h2>
              <table class="table">
                <tbody>
                    <tr>
                        <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: '40x40' %>
                        <br>
                        <%= link_to @user.name, user_path(@user.id) %></td>
                        <td><%= @book.title %></td>
                        <td><%= @book.body %></td>
                        <% if @book.user == current_user %>
                        <td><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success" %></td>
                        <td><%= link_to "Destroy", book_path(@book.id),method: :delete, "data-confirm" => "本当に消しますか？", class:"btn btn-sm btn-danger" %></td>
                        <% end %>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>